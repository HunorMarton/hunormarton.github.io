---
import "@fontsource/cutive-mono";
import "@fontsource-variable/maven-pro"; // Supports weights 400-900
import "@fontsource/mitr";
import { ViewTransitions } from "astro:transitions";

interface Props {
  title: string;
}

const { title } = Astro.props;

const description =
  "Hunor Márton Borbély, Software Engineer, Freelancer in Berlin.";

const isProd = import.meta.env.PROD;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>

    <meta property="og:locale" content="en_US" />
    <meta property="og:type" content="website" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta property="og:title" content={title} />
    <meta name="twitter:title" content={title} />
    <meta name="description" content={description} />
    <meta property="og:description" content={description} />
    <meta name="twitter:description" content={description} />
    <meta property="og:site_name" content="SVG Tutorial" />
    <meta name="twitter:site" content="@HunorBorbely" />
    <meta name="twitter:creator" content="@HunorBorbely" />

    <meta
      property="og:image"
      content="https://hunormarton.github.io/image1200x630.png"
    />
    <meta
      name="twitter:image"
      content="https://hunormarton.github.io/image1600x900.png"
    />
    <meta property="og:url" content="https://hunormarton.github.io/" />

    <script
      async
      src="https://www.googletagmanager.com/gtag/js?id=UA-171674382-1"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(action: string, eventName: any) {
        dataLayer.push(arguments);
      }
      gtag("js", new Date());
      gtag("config", "UA-171674382-1");
    </script>

    {
      isProd && (
        <script
          defer
          src="https://analytics.eu.umami.is/script.js"
          data-website-id="f0174326-b261-4c1e-959b-1579f05b28eb"
        />
      )
    }

    <ViewTransitions />
  </head>
  <body>
    <slot />
    <style is:global>
      :root {
        --nav-height: 50px;
        --lightgray: rgb(228, 230, 235);
      }

      html {
        font-family: "Cutive Mono", monospace;
      }

      body {
        margin: 0;
      }

      html,
      body {
        height: 100%;
      }

      body > section,
      footer {
        --vertical-padding: 80px;
        --horizontal-padding: 20px;

        @media (min-width: 650px) {
          --horizontal-padding: 40px;
        }

        padding: var(--vertical-padding) var(--horizontal-padding);
        padding-right: calc(var(--horizontal-padding) + var(--nav-height));

        @media (min-width: 650px) {
          padding-right: calc(
            var(--horizontal-padding) * 2 + var(--nav-height)
          );
        }

        border-bottom: 1px dashed lightgray;

        & > h1 {
          margin-bottom: 2em;
          font-size: 1.7em;
        }

        & > h1::after {
          content: "_";
        }

        article {
          width: calc(
            100vw - var(--horizontal-padding) * 2 - var(--nav-height)
          );
        }
      }

      a,
      button {
        color: #0070f3;
        text-decoration: none;
        text-underline-offset: 4px;
      }

      a.primary,
      button {
        border: 1px solid #0070f3;
        display: inline-block;
        padding: 12px 20px;
        background-color: transparent;
        cursor: pointer;
      }

      a:not(.primary):hover {
        text-decoration: underline;
      }

      @media screen and (min-width: 650px) {
        body > section,
        footer {
          & > h1 {
            font-size: 1.5em;
          }

          article {
            width: auto;
          }
        }
      }
    </style>
  </body>
</html>
