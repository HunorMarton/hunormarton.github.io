---
import BlogLayout from "./BlogLayout.astro";
import BlogHeader from "./BlogHeader.astro";

export interface Props {
  title: string;
}

const { title } = Astro.props as Props;
---

<BlogLayout title={title}>
  <BlogHeader />
  <div class="container">
    <slot />
  </div>
</BlogLayout>

<style>
  .container {
    padding: 50px 0;
  }
</style>
