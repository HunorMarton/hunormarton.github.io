---
import codepenLogo from "../logos/codepen.svg?raw";
import githubLogo from "../logos/github.svg?raw";
import freecodecampLogo from "../logos/freecodecamp.svg?raw";
import youtubeLogo from "../logos/youtube.svg?raw";
import csstricksLogo from "../logos/css-tricks.svg?raw";
import skillshareLogo from "../logos/skillshare.svg?raw";

interface Props {
  icon: string;
}

const { icon } = Astro.props;

let svg =
  icon === "CodePen"
    ? codepenLogo
    : icon === "GitHub"
      ? githubLogo
      : icon === "freeCodeCamp"
        ? freecodecampLogo
        : icon === "YouTube"
          ? youtubeLogo
          : icon === "CSSTricks"
            ? csstricksLogo
            : icon === "SkillShare"
              ? skillshareLogo
              : null;
---

<Fragment set:html={svg} />
