---
import type { CollectionEntry } from "astro:content";
import HobbyTitle from "../components/HobbyTitle.astro";
import Preview from "../components/Preview.astro";
import HobbyInfo from "../components/HobbyInfo.astro";

interface Props {
  entry: CollectionEntry<"hobbies">;
  full?: boolean;
}

const { entry, full } = Astro.props;
---

<article transition:name={`item-${entry.data.title}`}>
  {full && <HobbyTitle entry={entry} />}
  <Preview entry={entry} self={true} />
  {full && <HobbyInfo entry={entry} />}
</article>

<style>
  article {
    display: inline-block;
    vertical-align: top;
  }
</style>
