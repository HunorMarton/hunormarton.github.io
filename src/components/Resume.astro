---
import ResumeItem from "./ResumeItem.astro";
import Button from "./Button.astro";
import { experience, education, volunteering } from "../resume-data.ts";

interface Props {
  full?: boolean;
}

const { full } = Astro.props;

const cvFileId = "1NuFXxP13Km_FtHhKpqM0V5rK45q0zlyOANnKSIu2Qx4";
const cvFileFormat = "pdf";
---

<section id="resume">
  <h1>Hunor Márton Borbély</h1>
  <section>
    <h2>Experience</h2>
    <div class="grid">
      {
        experience
          .filter((item) => full || item.highlight)
          .map((item) => <ResumeItem data={item} full={full} />)
      }
    </div>
  </section>
  {
    full && (
      <section>
        <h2>Education</h2>
        <div class="grid">
          {education.map((item) => (
            <ResumeItem data={item} full={full} />
          ))}
        </div>
      </section>
    )
  }
  {
    full && (
      <section>
        <h2>Volunteering</h2>
        <div class="grid">
          {volunteering.map((item) => (
            <ResumeItem data={item} full={full} />
          ))}
        </div>
      </section>
    )
  }
  {
    full && (
      <div class="after">
        <Button
          href={`https://docs.google.com/presentation/d/${cvFileId}/export/${cvFileFormat}`}
          primary
        >
          Download CV
        </Button>
      </div>
    )
  }
  {!full && <Button href="/resume">Show more</Button>}
</section>

<style>
  #resume section {
    display: inline-block;
    vertical-align: top;

    h2 {
      text-transform: uppercase;
    }
  }

  .grid {
    display: flex;
    gap: 100px 80px;
    flex-wrap: wrap;
    margin: 50px 0 50px 0;
  }

  .after {
    margin: 40px 0;
  }

  @media screen and (min-width: 650px) {
    #resume section {
      margin-right: 20px;
    }
  }
</style>
