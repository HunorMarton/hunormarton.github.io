---
interface Props {
  tags: string[];
}

const { tags } = Astro.props;
---

<ul>
  {tags.map((tag) => <li>{tag}</li>)}
</ul>

<style>
  ul {
    display: flex;
    gap: 0.5em;
    list-style: none;
    padding: 0;
  }

  li {
    border: 1px solid lightgray;
    border-radius: 0.5em;
    color: black;
    font-size: 0.8em;
    padding: 0.25em 0.5em;
  }
</style>
