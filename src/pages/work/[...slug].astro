---
import { getCollection } from "astro:content";
import DetailsWithLogo from "../../layouts/DetailsWithLogo.astro";
import WorkDetail from "../../components/WorkDetail.astro";

// 1. Generate a new path for every collection entry
export async function getStaticPaths() {
  const blogEntries = await getCollection("work");
  return blogEntries.map((entry) => ({
    params: { slug: entry.slug },
    props: { entry },
  }));
}
// 2. For your template, you can get the entry directly from the prop
const { entry } = Astro.props;
const { Content } = await entry.render();
---

<DetailsWithLogo
  title={`Hunor Márton Borbély | ${entry.data.header}`}
  logo={entry.data.pic}
>
  <section>
    <WorkDetail entry={entry}>
      <Content />
    </WorkDetail>
  </section>
</DetailsWithLogo>
